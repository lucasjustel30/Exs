num = int(input('enter a number and print by this number'))
i = 0
while num > i:
    i = i + 1
    print(i)
    
2.

num = int(input('enter a number and sum all the number by this number'))
i = 0
soma = 0
while num > i:
    i = i + 1
    soma = soma + i
print('the sum from one to', num , 'is' , soma )

3.

num = int(input('enter a number and print its factorial'))
i = 0
factorial = 1
while num > i:
    i = i + 1
    factorial = factorial*i
print('the factorial of' , num , 'is' , factorial)

4.

Print the multiplication table of 9

i = 0
while i < 10:
    i = i + 1
    print(9*i)

5.

num = int(input('enter a number to show all its divisors'))
div = 1
while div <= num:
    if num%div == 0:
        print(div , 'is divisor of:', num)
    div = div + 1

6.

num = int(input('enter numbers to sum and press 0 to stop'))
sum = 0
while num != 0: 
    sum = sum + num
    num = int(input('enter numbers to sum and press 0 to stop'))
print('the sum is:' , sum )

7.

from random import randint
random = randint(1,10)
num = int(input('thy to discover the number between 1-10'))
while random!=num :
    print('wrong answer')
    num = int(input('thy again to discover the number between 1-10'))
print( random , 'is the correct number')

8.

age = int(input('enter the age'))
while age < 0 or age > 150:
    print('invalid')
    age = int(input('enter the age'))
wage = int(input('enter the wage'))
while wage <= 0:
    print('invalid')
    wage = int(input('enter the wage again'))
sex = input('enter the sex M/F')
while not (sex == 'M' or sex =='F'):
    print('invalid')
    sex = input('enter the sex again')
print('the age is' , age , 'wage is' , wage , 'sex is' , sex)



